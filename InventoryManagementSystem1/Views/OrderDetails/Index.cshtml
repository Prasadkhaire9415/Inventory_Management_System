@model IEnumerable<InventoryManagementSystem1.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<h2>OrderDetails</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.OrderID)
        </th>
        <th>
                Product Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
                Total Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order.OrderID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }, new { @class = "btn btn-success btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Details", "Details", new { id = item.OrderDetailID }, new { @class = "btn btn-info btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID }, new { @class = "btn btn-danger btn-sm", style = "margin-right: 5px;" })
        </td>
    </tr>
}

</table>
