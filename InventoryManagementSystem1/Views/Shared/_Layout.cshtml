<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Inventory Management System</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: darkmagenta;
            color: white;
            padding: 10px 20px;
        }

        .logo {
            height: 90px;
            width: 200px;
        }

        .navbar {
            margin-left: auto;
            background-color: white !important;
        }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .content {


            width: 100%;
            max-width: 1200px;
            background: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y:auto;
            padding-bottom:60px;
        }

        footer {
            background-color: darkmagenta;
            color: white;
            padding: 10px 20px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .navbar-nav .nav-link {
            color: black;
        }

        .navbar-nav .dropdown-menu .dropdown-item {
            color: black;
            background-color: white;
        }
    .logout-container {
    display: flex;
    justify-content: flex-end;
    padding: 10px;
}

.logout-button {
    background-color: #d9534f; /* Bootstrap's "danger" color */
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.logout-button:hover {
    background-color: #c9302c; /* Darker shade on hover */
}

.logout-button:focus {
    outline: none;
    box-shadow: 0 0 5px #c9302c;
}

    </style>
</head>
<body>
    <!-- Header Section -->
    <header class="d-flex align-items-center">
        <div class="d-flex align-items-center">
            <img src="~/Content/Images/large.png" alt="Logo" class="logo">
        </div>
        <nav id="navbarNav" class="navbar navbar-expand-lg navbar-light">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Dashboard", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Inventories", "Index", "Inventories", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="productsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Products
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                            <li>@Html.ActionLink("Products Detail", "Index", "Products", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Suppliers", "Index", "Suppliers", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="ordersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Orders
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                            <li>@Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Order details", "Index", "OrderDetails", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Reports", "Index", "Reports", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>

        </nav>
        <div class="logout-container">
            <button class="logout-button" onclick="window.location.href='@Url.Action("Logout", "Account")'">Log Out</button>
        </div>
    </header>

    <!-- Main Content Section -->
    <main role="main" class="container mt-3">
        <div class="content">
            @RenderBody()

        </div>
    </main>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year - Invencio</p>
        </div>
    </footer>

    <!-- JavaScript files -->
   
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
