@model IEnumerable<InventoryManagementSystem1.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }, new { @class = "btn btn-success btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Details", "Details", new { id = item.OrderID }, new { @class = "btn btn-info btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderID }, new { @class = "btn btn-danger btn-sm", style = "margin-right: 5px;" })
        </td>
    </tr>
}

</table>
