@model IEnumerable<InventoryManagementSystem1.Inventory>

@{
    ViewBag.Title = "Index";
}

<h2>Inventories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            LastUpdated
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdated)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.InventoryID }, new { @class = "btn btn-success btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Details", "Details", new { id = item.InventoryID }, new { @class = "btn btn-info btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Delete", "Delete", new { id = item.InventoryID }, new { @class = "btn btn-danger btn-sm", style = "margin-right: 5px;" })
        </td>
    </tr>
}

</table>
