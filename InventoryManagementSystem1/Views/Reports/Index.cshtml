@model IEnumerable<InventoryManagementSystem1.Report>

@{
    ViewBag.Title = "Index";
}

<h2>Reports</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReportName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeneratedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportData)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReportName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GeneratedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportData)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ReportID }, new { @class = "btn btn-success btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Details", "Details", new { id = item.ReportID }, new { @class = "btn btn-info btn-sm", style = "margin-right: 5px;" })
            @Html.ActionLink("Delete", "Delete", new { id = item.ReportID }, new { @class = "btn btn-danger btn-sm", style = "margin-right: 5px;" })
        </td>
    </tr>
}

</table>
